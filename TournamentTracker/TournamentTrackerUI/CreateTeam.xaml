<Page x:Class="TournamentTrackerUI.CreateTream"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TournamentTrackerUI"
      mc:Ignorable="d"       
      Title="CreateTream">

    <Grid HorizontalAlignment="Left" Height="650" Width="768" Margin="0,75,0,75">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="46*"/>
            <ColumnDefinition Width="19*"/>
        </Grid.ColumnDefinitions>

        <Label Content="Create Team" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="20" Height="37" Width="119"/>
        <Label Content="Team Name: " HorizontalAlignment="Left" Margin="32,67,0,0" VerticalAlignment="Top" Height="30" Width="102"/>
        <TextBox x:Name="teamName_textbx" HorizontalAlignment="Left" Margin="134,70,0,0" Text="enter name" TextWrapping="Wrap" VerticalAlignment="Top" Width="218" Height="24"/>
        <TextBlock HorizontalAlignment="Left" Margin="32,113,0,0" Text="Select Team Member:" TextWrapping="Wrap" VerticalAlignment="Top" Height="37" Width="97"/>
        <ListBox x:Name="teamMemberListBx1" Margin="134,118,192,506"/>
        <Button x:Name="addMemberBtn" Content="Add Member" HorizontalAlignment="Left" Margin="190,149,0,0" VerticalAlignment="Top" Height="26" Width="106"/>
        <GroupBox Header="Create New Member" Margin="29,218,192,127">
            <StackPanel Margin="0,0,-2,0">
                <Label Content="First Name" Width="106" HorizontalAlignment="Left"/>
                <TextBox x:Name="firstName_textbx" Text="first" TextWrapping="Wrap" Width="167" HorizontalAlignment="Left"/>
                <Label Content="Last Name" Width="104" HorizontalAlignment="Left"/>
                <TextBox x:Name="lastName_textbx" Text="last" TextWrapping="Wrap" Width="167" HorizontalAlignment="Left"/>
                <Label Content="E-mail" Width="104" HorizontalAlignment="Left"/>
                <TextBox x:Name="email_textbx" Text="you@me.com" TextWrapping="Wrap" Width="167" HorizontalAlignment="Left"/>
                <Label Content="Cellphone" Width="104" HorizontalAlignment="Left"/>
                <TextBox x:Name="cellphone_textbx" Text="867-5309" TextWrapping="Wrap" Width="167" HorizontalAlignment="Left"/>
                <Button x:Name="createMemberBtn" Width="100" Margin="10,10,10,10">
                    <TextBlock x:Name="createMemberBtn1" Text="Create Member:" TextWrapping="Wrap"/>
                </Button>
            </StackPanel>
        </GroupBox>
        <ListBox x:Name="teamMemberListBx" Margin="384,72,106,189" Grid.ColumnSpan="2"/>
        <Button  HorizontalAlignment="Left" Margin="133,244,0,0" VerticalAlignment="Top" Height="44" Width="81" Grid.Column="1">
            <TextBlock x:Name="deleteTeamBtn" Text="Delete Selected:" TextWrapping="Wrap"/>
        </Button>
        <Button x:Name="entryFee_textbx" Content="Create Tournament" HorizontalAlignment="Left" Margin="315,564,0,0" VerticalAlignment="Top"/>

    </Grid>
</Page>
